<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="3dp"
            android:paddingHorizontal="15dp"
            android:singleLine="true"
            android:text="Note title note title Note title note title Note title note title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:paddingVertical="3dp"
            android:paddingHorizontal="15dp"
            android:singleLine="true"
            android:text="Note title note title Note title note title Note title note title"
            android:textColor="@color/grey_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNoteDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_sync"
            android:drawableTint="@color/grey_text"
            android:text="2 phut truoc"
            android:textColor="@color/grey_text"
            android:textSize="13sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>